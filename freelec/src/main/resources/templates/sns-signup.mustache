<!--회원가입 페이지-->
{{>layout/header}}
<form method="post" action="/users/new">
    <div class="container">
        <h1>회원가입</h1>
        <div class="form-group">
            <label for="email">userEmail</label>
            <input type="text" class="form-control" id="email" name="email" value="{{email}}" placeholder="사용자 이메일" readonly>
        </div>
        <div class="form-group">
            <label for="name">userName</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="사용자 이름">
        </div>

        <button type="submit" class="btn btn-primary">가입 완료</button>
    </div>
</form>
{{>layout/footer}}